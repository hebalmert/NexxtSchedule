<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nexxt Calendar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NexxtCalendar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Administrador
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Compania", "Index", "Companies")</li>
                                <li>@Html.ActionLink("Usuarios", "Index", "Users")</li>
                                <li>@Html.ActionLink("Pais", "Index", "Countries")</li>
                                <li>@Html.ActionLink("Nivel Precio", "Index", "LevelPrices")</li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("User") | User.IsInRole("Profe"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Archivo
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("User"))
                                {
                                    <li>@Html.ActionLink(@Resources.Resource.Menu_Archivo_Profesional, "Index", "Professionals")</li>
                                }
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Archivo_Clients, "Index", "Clients")</li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("User") | User.IsInRole("Profe"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Agenda
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                @*<li>@Html.ActionLink(@Resources.Resource.Menu_Agenda_Eventos, "Index", "Events")</li>*@
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Agenda_Calendar, "Index", "Calendar")</li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("User") | User.IsInRole("Profe"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Administracion
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("User"))
                                {
                                    <li>@Html.ActionLink(@Resources.Resource.Menu_Administracion_Category, "Index", "ServiceCategories")</li>
                                    <li>@Html.ActionLink(@Resources.Resource.Menu_Administracion_Service, "Index", "Services")</li>
                                }
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Adminitracion_CobroDirecto, "Create", "DirectPayments")</li>
                                <li><hr noshade="noshade" /></li>
                                @if (User.IsInRole("User"))
                                {
                                    <li>@Html.ActionLink(@Resources.Resource.Menu_Administracion_CxProfesional, "Index", "DirectGenerals")</li>
                                    <li>@Html.ActionLink(@Resources.Resource.Menu_Administracion_LiquidarProfesionales, "Index", "PayProfessionals")</li>
                                    <li><hr noshade="noshade" /></li>
                                    <li>@Html.ActionLink(@Resources.Resource.MenuAdmin_Egresos, "Index", "Outcomes")</li>
                                }
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Sistema
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Sistema_Consecutivos, "Index", "Registers")</li>
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Sistema_Encabezado, "Index", "HeadTexts")</li>
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Sistema_Indetificador, "Index", "Identifications")</li>
                                <li>@Html.ActionLink(@Resources.Resource.Menu_Sistema_Impuesto, "Index", "Taxes")</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nexxt Calendar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
