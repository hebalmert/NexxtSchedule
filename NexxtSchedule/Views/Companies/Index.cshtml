@model IEnumerable<NexxtSchedule.Models.Company>

@{
    ViewBag.Title = @Resources.Resource.Company_ViewIndex_Titulo1;
}
<br />
    <h2>@Resources.Resource.Company_ViewIndex_Titulo1</h2>

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <button title="" class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Create", new { })'">
            <i class="fa fa-plus"></i>
            @Resources.Resource.ButtonNew
        </button>
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rif)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.Pais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDesde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateHasta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @if (!string.IsNullOrEmpty(item.Logo))
        {
            <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rif)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Country.Pais)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateDesde)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateHasta)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Activo)
    </td>
    <td>
        <button title="Editar" class="btn btn-warning btn-sm" onclick="location.href =
                   '@Url.Action("Edit", new { id = item.CompanyId})'">
            <i class="fa fa-pencil-alt"></i>
        </button>

        <button title="Detalle" class="btn btn-info btn-sm" onclick="location.href =
                   '@Url.Action("Details", new { id = item.CompanyId})'">
            <i class="fa fa-clipboard-list"></i>
        </button>

        <button title="Borrar" class="btn btn-danger btn-sm" onclick="location.href =
                   '@Url.Action("Delete", new { id = item.CompanyId})'">
            <i class="fa fa-trash"></i>
        </button>

    </td>
</tr>
}

</table>
