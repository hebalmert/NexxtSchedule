@model IEnumerable<NexxtSchedule.Models.Service>

@{
    ViewBag.Title = @Resources.Resource.Service_IndexView_Titulo1;
}
<br />
    <h2>@Resources.Resource.Service_IndexView_Titulo1</h2>

    <p>
        <button title="" class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Create", new { })'">
            <i class="fa fa-plus"></i>
            @Resources.Resource.ButtonNew
        </button>
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceCategory.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tax.Impuesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceCategory.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tax.Impuesto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Servicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            <button title="Editar" class="btn btn-warning btn-sm" onclick="location.href =
                   '@Url.Action("Edit", new { id = item.ServiceId})'">
                <i class="fa fa-pencil-alt"></i>
            </button>

            <button title="Detalle" class="btn btn-info btn-sm" onclick="location.href =
                   '@Url.Action("Details", new { id = item.ServiceId})'">
                <i class="fa fa-clipboard-list"></i>
            </button>

            <button title="Borrar" class="btn btn-danger btn-sm" onclick="location.href =
                    '@Url.Action("Delete", new { id = item.ServiceId})'">
                <i class="fa fa-trash"></i>
            </button>
        </td>
    </tr>
}

</table>
